{
  "compilerOptions": {
    "target": "ES2020",
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
